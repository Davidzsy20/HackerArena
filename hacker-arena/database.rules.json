{
  "rules": {
    "problems": {
      ".read": "auth!== null",
      ".write": "auth.token.admin === true"
    },
    "users": {
      "$user": {
        ".read": "auth !== null",
        ".write": "auth.uid === data.child('id').val() || auth.uid === newData.child('id').val()"
      }
    },
    "rooms": {
      ".read": "auth !== null",
      "$room": {
        ".write": "!data.exists() || data.child('players/' + auth.token.username).exists() || data.child(auth.uid).exists()",
        "players": {
          "$username": {
            ".write": "!data.exists() || $username === auth.token.username || auth.uid === data.child('uid').val()"
          }
        },
        "teams": {
          ".write": "auth!== null"
        },
        "$uid": {
          ".write": "$uid === auth.uid || !data.exists()"
        }
      }
    },
    "BoardRooms": {
      ".read": "auth!== null",
      ".write": "auth!== null"
    }
  }
}